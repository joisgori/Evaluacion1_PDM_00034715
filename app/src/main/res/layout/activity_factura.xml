            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/correo_reci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/productos_reci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
